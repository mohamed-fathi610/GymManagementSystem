@model IEnumerable<SessionViewModel>

@if (TempData["SuccessMessage"] != null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">Upcoming Sessions</h2>
            <p class="text-muted">Sessions valid for managing bookings</p>
        </div>
    </header>


    <div class="row g-4">
        @if (Model.Any(s => s.Status == "Upcoming"))
        {
            @foreach (var item in Model.Where(s => s.Status == "Upcoming"))
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3 bg-primary">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@item.Status
                                </h5>
                                <span class="badge bg-light text-dark">@item.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@item.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @item.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @item.StartDate.ToString("MMM dd, yyyy")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @item.StartDate.ToString("hh:mm tt") - @item.EndDate.ToString("hh:mm tt")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @item.Duration
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Capacity:</strong> @(item.Capacity - item.AvailableSlots) / @item.Capacity
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="GetMembersForUpcoming" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                                    <i class="bi bi-eye me-1"></i> View Members
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Upcoming Sessions</h4>
            </div>
        }
    </div>

    <!-- Ongoing Sessions -->
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-success mb-0">Ongoing Sessions</h2>
            <p class="text-muted">Sessions valid for managing attendance</p>
        </div>
    </header>

    <div class="row g-4">
        @if (Model.Any(s => s.Status == "Ongoing"))
        {
            @foreach (var item in Model.Where(s => s.Status == "Ongoing"))
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3" style="background-color:#198754;">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@item.Status
                                </h5>
                                <span class="badge bg-light text-dark">@item.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@item.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @item.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @item.StartDate.ToString("MMM dd, yyyy")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @item.StartDate.ToString("hh:mm tt") - @item.EndDate.ToString("hh:mm tt")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @item.Duration
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-success me-2"></i>
                                    <strong>Capacity:</strong> @item.AvailableSlots / @item.Capacity
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Ongoing" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                                    <i class="bi bi-eye me-1"></i> View Members
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Ongoing Sessions</h4>
            </div>
        }
    </div>
</div>
