@using GymManagementDAL.Entities.Enums
@model TrainerToUpdateViewModel

@Html.ValidationMessage("DataInvalid", new { @class = "text-danger" })

<div class="container">
    <main role="main" class="pb-3">

        <div class="container mt-4">
            <header class="mb-4">
                <h3 class="text-primary-color">Edit Trainer</h3>
                <p class="text-muted">Update trainer information</p>
            </header>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="mb-4 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">Editing Profile For</small>
                                <h4 class="mb-0 text-black">@Model.Name</h4>
                            </div>
                            <form asp-action="Edit" method="post">
                                <input hidden readonly value="@ViewBag.Id" />
                                <input hidden readonly asp-for="Name" />

                                <!-- Personal Information -->
                                <div class="section-header mb-3">
                                    <h5 class="text-primary fw-bold">Personal Information</h5>
                                    <hr class="mt-2">
                                </div>
                                <div class="row g-3 mb-4">


                                    <div class="col-md-6">
                                        <small class="text-muted d-block mb-1">Email</small>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <small class="text-muted d-block mb-1">Phone</small>
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted d-block mb-1">BuildingNumber</small>
                                        <input asp-for="BuildingNumber" class="form-control" />
                                        <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted d-block mb-1">Street</small>
                                        <input asp-for="Street" class="form-control" />
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted d-block mb-1">City</small>
                                        <input asp-for="City" class="form-control" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Professional Information -->
                                <div class="section-header mb-3">
                                    <h5 class="text-primary fw-bold">Professional Information</h5>
                                    <hr class="mt-2">
                                </div>
                                <div class="row g-3">

                                    <div class="col-12">
                                        <label class="form-label fw-semibold" asp-for="Specialities">
                                            Specializations <span class="text-danger">*</span>
                                        </label>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialities"
                                                   value="GeneralFitness"
                                                   @(Model.Specialities.ToString() == "GeneralFitness" ? "checked" : "") />
                                            <label class="form-check-label" for="GeneralFitness">GeneralFitness</label>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialities"
                                                   value="Yoga"
                                                   @(Model.Specialities.ToString() == "Yoga" ? "checked" : "") />
                                            <label class="form-check-label" for="Yoga">Yoga</label>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialities"
                                                   value="Boxing"
                                                   @(Model.Specialities.ToString() == "Boxing" ? "checked" : "") />
                                            <label class="form-check-label" for="Boxing">Boxing</label>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialities"
                                                   value="CrossFit"
                                                   @(Model.Specialities.ToString() == "CrossFit" ? "checked" : "") />
                                            <label class="form-check-label" for="CrossFit">CrossFit</label>
                                        </div>
                                    </div>


                                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-outline">
                                        <i class="bi bi-arrow-left me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-fill">
                                        <i class="bi bi-check-lg me-1"></i>Update Trainer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </main>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
